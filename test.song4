/* Need three declarations (optional)
to start with */

tempo 120 ;
key Cminor ;
time 4/4 ;

// Voice delcarations
 $V1 = Guitar ;
 $V2 = Flute ;

 $d1 = ACOUSTIC_SNARE ;
 $d2 = OPEN_HI_HAT ;

// Phrase declarations
$N1 = C Dh Eq Fi {g a} ;
$N2 = Gmaj Adim A#aug Bbmin ;

// Voiced phrases

voice $V1 $N1 $N1 
voice $V2 $N1 $N1 marktime:$mark
voice $V1 $N2 $N1 | $N2
voice $V2 recalltime:$mark $N2 $N2 3:4 $N1

(ri ci ri ci  ri ci ri ci  ri ci ri ci  ri ci ri ci)
drum $d2 16 -+-+ -+-+ -+-+ -+-+
drum $d1 16 --+- --+- --++ --+-

